.user_info
  %ul
    %li
      %span.column_left
        Benutzername:
      %span.column_right
        = @user.username
      %hr   
    %li
      %span.column_left
        Name:
      %span.column_right
        = @user.last_name
      %hr
    %li
      %span.column_left
        Vorname:
      %span.column_right
        = @user.first_name
      %hr
    %li
      %span.column_left
        Email:
      %span.column_right
        = mail_to @user.email
      %hr
    %li
      %span.column_left
        Roles:
      %span.column_right
        - if @user.user_roles.first
          = @user.user_roles.first.name
      %hr