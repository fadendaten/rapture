%h1
  Alle Kunden


#result

.actions
  .search_function
    = form_tag '/search', {:controller => 'customers', :action => 'search', :id => 'customer_search'} do
      = search_field_tag 'search', params[:search]
      = submit_tag "Kunden suchen"
      
  .new_customer    
    = link_to 'neuen Kunden erfassen', new_customer_path()
%hr

%ul.pagination
  %strong Springen zu:
  - Customer.pagination_letters.each do |letter|
    %li
      = link_to letter, customers_path(:letter => letter)

#customers
  .customers.round
    = render 'layouts/display_customers'