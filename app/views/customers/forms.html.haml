%h1= @customer.new_record? ? "Neuen Kunden erfassen" : @customer.company

  
.customer_form
  %hr
  %h3
    Firma
  = simple_form_for @customer do |f|
    = render 'layouts/company_fields', :f => f
    %br
    %hr
    
    %h3
      Kontaktadresse
    - @customer.build_contact_address unless @customer.contact_address
    = f.simple_fields_for :contact_address do |builder|
      = render 'layouts/address_fields', :f => builder
    
    = f.submit "Speichern", :id => "submit"
  
  